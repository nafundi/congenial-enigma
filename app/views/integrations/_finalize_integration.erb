<div id="finalize-integration">
  <div class="alert alert-info">
    <p>Set up ODK Aggregate to publish to the following URL:</p>
    <p class="small">
      <%= tag :strong, id: 'push-url', data: {
              url: push_configured_service_data_source_url(0, 1) } %>
    </p>
  </div>

  <%= form_tag integrations_path, method: :post do %>
    <% %w[data_source_id rule_data[field_name] rule_type rule_data[value]
          message data_destination_id].each do |name| %>
      <%= hidden_field_tag name %>
    <% end %>
    <%= button_tag icon('plus', 'Add Integration'), class: 'btn btn-success' %>
  <% end %>
</div>
